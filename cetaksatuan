								if ($cek_data > 0) {
									echo "<script>alert('Tanggal tersebut Sudah terpesan , Silahkan Pilih tanggal lain');  document.location='home.php?page=pemesanan';</script>";
								}else{

									$nama			= $_POST['id_pengguna'];
									$notelp			= $_POST['notelp'];
									$alamat 		= $_POST['alamat'];
									$tanggal_awal	= $_POST['tanggal_awal'];
